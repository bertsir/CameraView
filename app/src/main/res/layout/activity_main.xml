<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.bertsir.mycameralibary.MainActivity">

        <cn.bertsir.cameralibary.view.CameraView
            android:id="@+id/cv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:direction="BACK"
            ></cn.bertsir.cameralibary.view.CameraView>
        <cn.bertsir.cameralibary.view.BlurPreviewView
            android:id="@+id/bpv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="50dp"
            >
                <Button
                    android:id="@+id/bt_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="切换摄像头"
                    />
                <Button
                    android:id="@+id/bt_take"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拍照"
                    />
                <Button
                    android:id="@+id/bt_takeandwater"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="水印拍照"
                    />
                <Button
                    android:id="@+id/bt_blur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="高斯模糊"
                    />

        </LinearLayout>

</FrameLayout>
